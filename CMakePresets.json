{
    "version": 5,
	"cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug-make",
            "displayName": "Generate UNIX Makefiles for debugging",
            "description": "Sets UNIX Makefiles generator, build and install directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "",
                "CMAKE_TOOLCHAIN_FILE": "",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        },
        {
            "name": "release-make",
            "displayName": "Generate UNIX Makefiles for releasing",
            "description": "Sets UNIX Makefiles generator, build and install directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "",
                "CMAKE_TOOLCHAIN_FILE": "",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-make",
            "displayName": "Build target with UNIX Makefiles",
            "configurePreset": "debug-make",
            "configuration": "Debug",
            "targets": "all"
        }
    ],
    "testPresets": [
        {
            "name": "benchmarks/sum",
            "description": "test benchmarks/sum/extracted.ll",
            "displayName": "",
            "configurePreset": "debug-make"
        }
    ]
}
